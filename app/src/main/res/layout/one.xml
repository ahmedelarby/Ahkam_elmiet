<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".one"
    android:layout_gravity="center"

    android:orientation="vertical"
    android:background="@drawable/backa">


<LinearLayout

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">


            <Button

                android:id="@+id/one"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mogama"

                android:text="صفةُ غُسلِ المَيِّت"
                android:textColor="#F5BF04"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/two"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mogama"
                android:text="احكامُ ُ غُسْلِ  المرأةِ\n والخُنْثَى والمُحْرِم"
                android:textColor="#F5BF04"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/there"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mogama"
                android:text="إذا خرج من المَيِّت\n نجاسةٌ بعد غُسلِه"
                android:textColor="#F5BF04"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fife"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mogama"
                android:text="حُكمُ الاغتسالِ\n مِن غُسْلِ المَيِّت"
                android:textColor="#F5BF04"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button

                android:id="@+id/six"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mogama"
                android:text="حُكمُ غُسْلِ المَيِّتِ"
                android:textColor="#F5BF04"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sifen"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mogama"
                android:text="حُكمُ أخْذِ الأُجرةِ \n على غُسْلِ المَيِّت"
                android:textColor="#F5BF04"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ate"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mogama"
                android:text="سَتْرُ الغاسِلِ \nالقبيحَ الذي يراه"
                android:textColor="#F5BF04"
                android:textSize="20sp"
                android:textStyle="bold" />

    <Button
        android:id="@+id/naine"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mogama"
        android:text="مخالفات في التغسيل \n الميت وتكفينه"
        android:textColor="#F5BF04"
        android:textSize="19sp"
        android:textStyle="bold" />






</LinearLayout>



    </ScrollView>

















